<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.NewFeedsController"
            style="-fx-background-color: #f5f5f5;">

    <!-- TOP CREATE POST SECTION -->
<top>
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15;">

        <TextArea fx:id="postContentArea"
                  promptText="What's on your mind?"
                  wrapText="true"
                  prefHeight="80"
                  style="-fx-background-radius: 10; -fx-border-radius: 10;" />

        <!-- IMAGE PREVIEW SECTION -->
        <VBox spacing="5">
            <ImageView fx:id="previewImageView"
                       fitWidth="300"
                       preserveRatio="true"
                       visible="false" />

            <HBox spacing="10">
                <Label fx:id="imageNameLabel"
                       visible="false"
                       style="-fx-text-fill: gray;" />

                <Button fx:id="removeImageBtn"
                        text="Remove"
                        visible="false"
                        onAction="#handleRemoveImage"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            </HBox>
        </VBox>

        <HBox spacing="10">
            <Button text="ðŸ“· Add Image"
                    onAction="#handleAddImage" />

            <ComboBox fx:id="privacyComboBox"
                      promptText="Privacy"
                      prefWidth="150" />

            <Button text="Post"
                    onAction="#handlePost"
                    style="-fx-background-color: #6e2da1; -fx-text-fill: white;" />
        </HBox>
    </VBox>
</top>

    <!-- CENTER FEED -->
    <center>
        <ScrollPane fitToWidth="true"
                    style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox fx:id="feedVBox"
                      spacing="15"
                      style="-fx-padding: 15;" />
            </content>
        </ScrollPane>
    </center>

</BorderPane>